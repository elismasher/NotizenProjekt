@model Notizen_Projekt.Models.UserLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}




    <div class="boxForm">
        <div id="horizontalMittig">
            <h2>Sign In</h2>
            <br />
            <span style="color: red;">@Html.ValidationSummary()</span>
        </div>
        <form class="ui form" action="/User/Login" method="post">
            <div class="field">
                <label>Username</label>
                @Html.TextBoxFor(u => u.Username, new { required = "required", type = "text", name = "username", placeholder = "Username" })
            </div>

            <div class="field">
                <label>Passwort</label>
                @Html.PasswordFor(u => u.Password, new { required = "required", name = "password", placeholder = "Passwort" })
            </div>

            <br />

            <div id="horizontalMittig">
                <div class="ui buttons">
                    <button class="ui positive button" type="submit">Sign In</button>
                    <div class="or"></div>
                    <a href="~/User/Registration" class="ui button">Sign Up</a>
                </div>
            </div>


        </form>
        </div>




