@model Notizen_Projekt.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


    <div class="boxForm">
        <div id="horizontalMittig">
            <h2>Sign In</h2>
            <br />
        </div>
        <form class="ui form">
            <div class="field">
                <label>E-Mail</label>
                @Html.TextBoxFor(u => u.Email, new { required = "required", type = "email", name = "email", placeholder = "E-Mail" })
            </div>

            <div class="field">
                <label>Passwort</label>
                @Html.TextBoxFor(u => u.Password, new { required = "required", type = "password", name = "password", placeholder = "Passwort", @class = "password" })
            </div>

            <br />

            <div id="horizontalMittig">
                <div class="ui buttons">
                    <button class="ui positive button">Sign In</button>
                    <div class="or"></div>
                    <a href="~/User/Registration" class="ui button">Sign Up</a>
                </div>
                </div>


        </form>
        </div>




