<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/semanticUi")
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css" />
</head>
<body>
    <div class="ui secondary menu fixed" id="topNav">
        @Html.Partial("TopNavigation")
    </div>

    <div class="ui grid" id="fullHeight">
        <div class="three wide column" id="gridItem">
            <div class="ui secondary vertical pointing menu" id="sideNav">
                @Html.Partial("SideNavigation")
            </div>
        </div>

        <div class="thirteen wide column" id="gridItem">
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <div class="addButton">
        <button class="circular red ui icon button" onclick="window.location.href = '#addNewNote';">
            <i class="icon add"></i>
        </button>
    </div>

    


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
