@model Notizen_Projekt.Models.Message
@{
    ViewBag.Title = "Message";
}

@if (Model != null)
{
    if (!string.IsNullOrEmpty(Model.Header.Trim()))
    {
        <h2>@Model.Header</h2>
    }
    if (!string.IsNullOrEmpty(Model.Messagetext.Trim()))
    {
        <p>@Model.Messagetext</p>
    }
    if (!string.IsNullOrEmpty(Model.Solution.Trim()))
    {
        <p>@Model.Solution</p>
    }
}
else
{
    <p>keine Meldung vorhanden</p>
}

